<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div class="error-message">
      <h2>
        <%= t("errors.template.header", count: product.errors.count, model: t("activerecord.models.product")) %>
      </h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t("activerecord.attributes.product.name"), class: "form-label" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
